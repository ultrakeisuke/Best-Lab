<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Best-Lab</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <nav>
        <%= link_to "Best-Lab", root_path %>
        <% if user_signed_in? %>
          <%= link_to 'ホーム', users_basics_path %>
          <%= link_to 'プロフィール', users_basic_path(current_user) %>
          <%= link_to 'メッセージ', users_rooms_path %>
          <%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
        <% elsif admin_signed_in? %>
          <%= link_to 'すべてのユーザー', admins_users_path %>
          <%= button_to 'ログアウト', destroy_admin_session_path, method: :delete %>
        <% else %>
          <%= link_to '新規登録', new_user_registration_path %>
          <%= link_to 'ログイン', new_user_session_path %>
        <% end %>
      </nav>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
