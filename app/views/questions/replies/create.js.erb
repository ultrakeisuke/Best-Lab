<%# 投稿したリプライ表示部を更新 %>
$('#reply-container-<%= @reply.answer_id %>').replaceWith("<%= j(render partial: 'questions/shared/replies/reply_list', locals: { answer: @answer, post: @post }) %>");
<%# 入力したフォームの値をリセット %>
$('#reply-textarea-<%= @reply.answer_id %>').val("");
<%# リプライの投稿前にエラーメッセージを出していた場合は消去する %>
var errorMessage = document.getElementById('js-reply-errors-<%= @reply.answer_id %>');
errorMessage.style.display = "none";
