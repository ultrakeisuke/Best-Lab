<%# 投稿したリプライ表示部を更新 %>
$('#display-reply-<%= @reply.answer_id %>').replaceWith("<%= j(render partial: 'questions/shared/reply_list', locals: { answer: @answer, post: @post }) %>");
<%# 入力したフォームの値をリセット %>
$('#reply-form-<%= @reply.answer_id %>-textarea').val("");
<%# リプライの投稿前にエラーメッセージを出していた場合は消去する %>
var errorMessage = document.getElementById('js-questions-errors-<%= @reply.answer_id %>');
errorMessage.style.display = "none";
