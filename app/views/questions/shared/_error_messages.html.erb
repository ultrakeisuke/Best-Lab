<div id="js-questions-errors-<%= @reply.answer_id %>">
  <% if resource.errors.any? %>
    <div id="error_explanation">
      <h4>
        <%= I18n.t(resource: resource.class.model_name.human.downcase) %>
      </h4>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
