<% provide(:title, "ユーザー情報") %>

<h3><%= @user.name %></h3>

<ul>
  <li>
    <% @posts.each do |post| %>
      <%= link_to(questions_post_path(post)) do %>
        <p><%= post.title %></p>
      <% end %>
      <%= button_to "投稿の削除", admins_post_path(post), data: { confirm: "本当に削除しますか？" }, method: :delete %>
    <% end %>
  <li>
</ul>
<%= paginate @posts %>

<p><%= button_to "アカウントの削除", admins_user_path(@user), data: { confirm: "本当に削除しますか？" }, method: :delete %></p>
