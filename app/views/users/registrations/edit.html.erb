<% provide(:title, "アカウント設定") %>

<div class="common-form">
  <div class="common-form__container">
    <h4>アカウント設定</h4>
    <%= form_with model: resource, url: user_registration_path, local: true do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field attached-pictures">
        <label for="setting-picture-for-account" >
          <i id="picture-file-icon" class="fas fa-plus-circle"></i>
          <p id="picture-file-text">プロフィール画像</p>
        </label>
        <%= f.file_field :picture, id: "setting-picture-for-account" %>
      </div>

      <div class="field">
        <%= f.label :password %> <i>(変更しない場合はスキップ)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "保存" %>
      </div>
    <% end %>

    <div class="account-reset">
      <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete %>
    </div>

  </div>
</div>
