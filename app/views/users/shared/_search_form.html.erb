<h4>ユーザー検索</h4>

<%= search_form_for @profile_search, url: searches_users_path do |f| %>

  <div class="field">
    <%= f.label :affiliation_eq, "所属" %>
    <div class="side-select-container">
      <%= f.select(:affiliation_eq, ProfileForm::AFFILIATIONS.invert) %>
    </div>
  </div>

  <div class="field">
    <%= f.label :school_eq, "学校名" %><br />
    <%= f.text_field :school_eq %>
  </div>

  <div class="field">
    <%= f.label :faculty_eq, "学部・研究科名" %><br />
    <%= f.text_field :faculty_eq %>
  </div>

  <div class="field">
    <%= f.label :department_eq, "学科・専攻・コース名" %><br />
    <%= f.text_field :department_eq %>
  </div>

  <div class="field">
    <%= f.label :laboratory_eq, "研究室名" %><br />
    <%= f.text_field :laboratory_eq %>
  </div>

  <div class="field">
    <%= f.label :description_cont_any, "プロフィール・研究分野など" %><br />
    <p>(スペース区切りで複数検索できます)</p>
    <%= f.text_field :description_cont_any %>
  </div>

  <div class="actions">
    <%= f.submit "検索" %>
  </div>

<% end%>
