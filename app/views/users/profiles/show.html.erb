<% provide(:title, @user.name) %>

<% if @user.picture? %>
  <%= image_tag @user.picture.url %>
<% else %>
  <%= image_tag "round-flask.jpeg" %>
<% end %>

<h3><%= @user.name %></h3>
<p><%= @user.profile %></p>
<p><%= @user.affiliation_i18n %></p>

<% if user_signed_in? %>
  <% if current_user == @user %>
    <%= link_to 'プロフィールを編集', edit_user_registration_path %>
  <% end %>
<% end %>